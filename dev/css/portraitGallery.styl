global-reset()
@import "mixins/*"

* 
	box-sizing:border-box

body
	background linear-gradient(bottom left, #183c54 ,#c8d4ca)
	font-family: "Helvetica Neue", arial, sans-serif
	font-weight:100
	width:90%
	center()

.nav
	height:100px
	margin-left:1.5%
	.tabs
		padding:60px 0px
		font-size:12px
		clearfix()
		.tab
			cursor:pointer
			float:left
			height:24px
			line-height:24px
			text-align:center
			vertical-align:middle
			color:#ffffff
			margin-right:20px
			padding:0px 10px
			border-radius:5px
			&:hover
				background-color:#1e1f21
		.active
			background-color:#1e1f21

.container
	margin:20px 0px 80px 0px
	clearfix()

card()
	background-color:#ffffff
	box-shadow:0px 0px 5px 0px #666666
	.head
		height:50px
		font-size:10px
		line-height:50px
		position:relative
		.angle
			angle(20px)
			position:absolute
			right:20%
			bottom:-10px
			background-color:#ffffff
		.title
			left:15px
			position:absolute
		.identity
			position:absolute
			right:15px
	.body
		background-color:#fafafa
		img 
			width:100%


.board
	float:left
	width:75%
	.card
		card()
		float:left
		width:30.3%
		margin:1.5%
		padding-bottom:0%
		
.aside
	float:left
	width:25%
	.card-mini
		margin:4.5%
		background-color:#ffffff
		height:50px
		font-size:10px
		line-height:50px
		padding-left:15px
		box-shadow:0px 0px 5px 0px #666666
	.card
		card()
		float:left
		width:90%
		margin:4.5%

