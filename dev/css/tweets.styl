global-reset()

html body 
	font-family: "Helvetica Neue", arial, sans-serif
	font-weight:100
	background-color:#f5cea6
ul
	margin:0px
	padding:0px

li
	list-style:none

.avatar
	width:54px
	height:54px
	border-radius:29px
	background-color:#ffffff	
	cursor:pointer


.wrap
	margin:5%
	box-shadow: 0px 0px 10px 0px rgba(154, 154, 154, 0.8)

.nav
	height:76px
	background-color:#fffbf5
	box-shadow: 0 1px 1px 0px rgba(154, 154, 154, 0.3)
	position:relative
	z-index:100
	.btn
		display:inline-block
		width:40px
		height:40px
		border-radius:21px
		margin:18px
		box-sizing:border-box
		background-color:#fffbf5
		border:1px solid #f2eee8
		color:#605e58
	.write
		float:left
		box-sizing:border-box
		width:76px
		height:76px
		border-right:1px solid #f2eee8
		.btn-primary
			background-color:#80a8cc
			border:1px solid #80a8cc
	.twitter
		width:40px
		height:40px
		position:absolute
		top:20px
		right:calc(50% - 20px)
	.search
		position:absolute
		border:1px solid #e3dfd8
		border-radius:21px
		height:40px
		width:200px
		background-color:#fffbf5
		right:20px
		top:20px
		color:#e3dfd8
		font-size:0.75rem
		font-weight:100
		padding:0px 20px


left_width=21%
main_width=58%
right_width=21%

@media (min-width: 700px)
	html
		font-size:26px
	section
		display:block
		width: 100%
	section.left
		width:100%
	section.main
		width:100%
	section.right
		width:100%

@media (min-width: 1000px)
	html
		font-size:20px
	section
		display:table-cell
		vertical-align:top
	section.left
		width:left_width
	section.main
		width:main_width
	section.right
		width:right_width

section.left
	background-color:#80a8cc
	text-align:center
	color:#ffffff
	letter-spacing:1px
	.profile
		padding:30px 25px
		.avatar
			width:110px
			height:110px
			margin:30px auto
			background-color:#ffffff
			border-radius:50%
		.name
			font-size:0.95rem
			font-weight:200
		.intro
			margin:16px 0px
			font-size:0.8rem
			line-height: 1.3
		.website
			font-size:0.7rem
			display:block
			margin-top:30px
		.follow-btn
			font-size:0.8rem
			margin:30px auto
			display:block
			width:160px
			border-radius:20px
			background-color:#6c94b8
			height:40px
			line-height:40px
	.pics 
		img
			width:100%

section.main
	box-sizing:border-box
	background-color:#f2eee8
	padding:36px
	.tabs
		background-color:#fffbf5
		text-align:center
		height:80px
		box-shadow: 0 2px 6px 0px rgba(154, 154, 154, 0.29)
		.tab
			cursor:pointer
			box-sizing:border-box
			display:inline-block
			height:100%
			width:25%
			font-size:0.7rem
			.title
				margin-top:24px
				color:#c6c1b0
			.count
				margin-top:5px
				font-weight:500
		.active
			border-bottom:5px solid #80a8cc
	.tweets
		background-color:#fffbf5
		margin-top:36px
		box-shadow: 0 2px 6px 0px rgba(154, 154, 154, 0.29)
		.tweet
			letter-spacing:1px
			box-sizing:border-box
			border-bottom:1px solid rgba(154, 154, 154, 0.29)
			padding:5% 4%
			.aside 
				display:table-cell
				padding-right:24px
			.content
				padding-right:10px
				display:table-cell
				vertical-align:top
				font-size:0.75rem
				.head
					.name
						font-weight:300
					.at
						margin-left:3px
						color:#c6c1b0
				.txt
					margin-top:6px
					font-size:1.0em
					line-height:1.4
					letter-spacing:1px
				.pic
					margin:16px 0px
					img
						width:100%
section.right
	background-color:#fffbf5
	.section
		padding:30px 30px
		.title
			color:#605e58
			font-size:0.8rem
			margin-bottom:10px
	.trends-area
		@extends section.right .section
		.trend
			font-size:0.8rem
			color:#80a8cc
			padding:3px 0px
			margin:0px
	.who-to-follow
		@extends section.right .section
		.person
			margin:20px 0px
			position:relative
			.aside
				display:table-cell
				vertical-align:top
				.avatar
					width:46px
					height:46px
			.content
				padding-left:10px
				display:table-cell
				vertical-align:top
				font-size:0.7rem
				.name
					margin:4px 0px
					color:#605e58
				.career
					color:#c6c1b0
			.operation
				cursor:pointer
				text-align:center
				position:absolute
				line-height:17px
				right:0px
				width:21px
				height:18px
				border:1px solid #c6c1b0
				top:5px
