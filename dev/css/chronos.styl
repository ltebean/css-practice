html body
	height:100%

body
	background -webkit-linear-gradient(top, #485d68 ,#848382,#485d68)
	font-family: "Helvetica Neue", arial, sans-serif
	font-weight:200

li
	list-style:none

.heart:before
	position: absolute; 
	content: ""; 
	left: 10px; 
	top: 0; 
	width: 10px; 
	height: 16px; 
	background: #e64c65; /* assign a nice red color */
	border-radius: 50px 50px 0 0; /* make the top edge round */ 
	-webkit-transform: rotate(-45deg); /* 45 degrees rotation counter clockwise */
	-webkit-transform-origin: 0 100%; /* Rotate it around the bottom-left corner */

.heart:after
	position: absolute; 
	content: ""; 
	top: 0; 
	width: 10px; 
	height: 16; 
	background: #e64c65; /* assign a nice red color */
	border-radius: 50px 50px 0 0; /* make the top edge round */ 
	-webkit-transform: rotate(45deg); /* rotating 45 degrees clockwise */
	-webkit-transform-origin: 100% 100%; /* rotation is around bottom-right corner this time */


.cycle
	width:14px
	height:14px
	border-radius:50%
.cycle-red
	border:2px solid #e66e4c
.cycle-orange
	border:2px solid #f3854f
.cycle-blue
	border:2px solid #29a2dc
.cycle-green
	border:2px solid #24c4bc

.avatar
	border-radius:22px
	width:36px
	height:36px
	background-color:#ffffff

.container
	width:80%
	margin: 80px auto
	border-radius:8px
	box-shadow: rgba(88,88,88,0.8) 0 0 10px

.nav
