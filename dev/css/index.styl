global-reset()

*
	box-sizing:border-box

html,body
	width:100%

body
	background linear-gradient(left bottom, #173b53 ,#c7d3c9)
	font-family: "Helvetica Neue", arial, sans-serif
	font-weight:100

.container
	width:80%
	margin:80px auto

.nav
	font-size:24px
	color:#ffffff
	margin:2%
	letter-spacing:1px

@media (min-width: 300px)
	.card
		width:88%
		margin:4%

@media (min-width: 700px)
	.card
		width:46%
		margin:2%

@media (min-width: 1000px)
	.card
		width:29.3%
		margin:2%

.board
	clearfix()
	.card
		border-radius:5px
		float:left
		background:#ffffff
		letter-spacing:1px
		box-shadow:0px 0px 13px 0px #666666
		.title
			padding:0px 5%
			font-size:18px
			line-height:46px
			border-bottom:1px solid #dedede
			height:46px
			color:#555555
		.pic
			display:block
			height:320
			padding:5%
			cursor:pointer
			img
				width:100%
				height:100%


