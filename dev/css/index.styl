global-reset()

*
	box-sizing:border-box

html,body
	width:100%

body
	background linear-gradient(left bottom, #173b53 ,#c7d3c9)
	font-family: "Helvetica Neue", arial, sans-serif
	font-weight:100

.container
	width:80%
	margin:60px auto

.nav
	font-size:18px
	color:#ffffff
	margin:2%
	letter-spacing:1px

@media (min-width: 300px)
	.card
		width:96%
		margin:2%

@media (min-width: 800px)
	.card
		width:46%
		margin:2%

@media (min-width: 1000px)
	.card
		width:29.3%
		margin:2%

.board
	clearfix()
	.card
		opacity:0.95
		float:left
		background:#ffffff
		box-shadow:0px 0px 10px 0px #666666
		.title
			padding:0px 5%
			font-size:18px
			line-height:46px
			border-bottom:1px solid #dedede
			height:46px
		.pic
			display:block
			height:294px
			padding:5%
			cursor:pointer
			img
				width:100%
				height:100%


