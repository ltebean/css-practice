global-reset()

*
	box-sizing:border-box

html,body
	width:100%

body
	font-family: "Helvetica Neue", arial, sans-serif
	font-weight:100

.container
	width:80%
	margin:80px auto

.nav
	font-size:24px
	margin:2%
	letter-spacing:1px

@media (min-width: 300px)
	.card
		width:88%
		margin:4%

@media (min-width: 700px)
	.card
		width:46%
		margin:2%

@media (min-width: 1000px)
	.card
		width:29.3%
		margin:2%

.board
	clearfix()
	.card
		float:left
		background:#ffffff
		letter-spacing:1px
		.title
			font-size:18px
			line-height:36px
			height:36px
			border-bottom:1px solid #dedede
		.pic
			display:block
			height:300
			padding:5% 0
			cursor:pointer
			img
				width:100%
				height:100%


