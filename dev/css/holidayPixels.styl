global-reset()

* 
	box-sizing:border-box

html body
	height:100%

body
	font-family: "Helvetica Neue", arial, sans-serif
	font-weight:100

.btn-green
	background-color:#78c960
	color:#ffffff
	border:none

img.bg
	position:fixed
	width:100%
	height:100%
	top:0px
	left:0px
	-webkit-filter:blur(15px)

.container
	width:1000px
	height:90%
	margin-left:auto
	margin-right:auto
	padding:2.5% 0px
	position:relative

.main-panel
	border-top-right-radius:8px
	border-bottom-right-radius:8px
	height:100%
	width:480px
	position:absolute
	left:380px

.main-panel-bg
	@extend .main-panel
	opacity:0.15
	background-color:#ffffff

.main-panel-overlay
	@extend .main-panel
	box-shadow:0px 0px 6px 0px #999999
	.head
		height:25%
		clearfix()
		.step
			float:left
			width:33%
			text-align:center
			color:#A0A9BA
			.btn
				line-height:32px
				width:36px
				height:36px
				border-radius:50%
				margin:50px auto 10px auto
				border:1px solid #A0A9BA
				font-weight:500
			.btn-green
				border:none
			.txt
				padding:5px 10px
				font-size:10px
				letter-spacing:1px
	.body
		background-color:#ffffff
		height:60%
		top:22%
		position:absolute
		width:500px
		border-top-right-radius:5px
		border-bottom-right-radius:5px
		box-shadow:1px 0px 1px 0px #cccccc
		.angle
			position:absolute
			left:14%
			top:-7px
			width: 14px; 
			height: 14px; 
			background: #ffffff; /* assign a nice red color */
			transform: rotate(45deg); /* rotating 45 degrees clockwise */
		.title-area
			height:35%
			.title-placeholder
				height:35%
			.title
				text-align:center
				font-size:18px
				width:100%
				height:30%
			.content
				text-align:center
				font-size:8px
				width:100%
				height:30%
				color:#c9c7c8
				letter-spacing:1px
		.destinations
			height:65%
			border-top:1px solid #e1e1df
			background-color:#f5f4f0
			border-bottom-right-radius:3px
			clearfix()
			.destination
				float:left
				width:33.3%
				height:100%
				color:#a5a5a5
				text-align:center
				.pic
					padding:33% 20% 20% 20%
					height:68%
					img
						width:100%
						border-radius:50%
				.name
					height:11%
					font-size:18px
				.percent
					height:21%
					font-size:20px
			.active
				color:#000000

	.foot
		height:15%

.aside-panel
	border-top-left-radius:8px
	border-bottom-left-radius:8px
	height:100%
	width:180px
	position:absolute
	left:200px

.aside-panel-bg
	@extend .aside-panel
	opacity:0.15
	background-color:#ffffff


.aside-panel-overlay
	@extend .aside-panel
	box-shadow:-1px 0px 1px 0px #999999
	.body
		background-color:#ffffff
		height:60%
		top:22%
		right:0px
		position:absolute
		width:230px
		img
			height:100%
			width:100%





